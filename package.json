{
	"name": "opentg",
	"version": "0.2.1",
	"private": true,
	"scripts": {
		"dev:web": "vite dev --mode platform-web",
		"build:web": "vite build --mode platform-web",
		"dev:windows": "vite dev --mode platform-windows",
		"build:windows": "vite build --mode platform-windows",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"bundle:web": "bun itchio-web-bundle.js",
		"tauri:generate:icon": "bun tauri icon static/desktop-icon.png --output src-tauri/icons",
		
		"tauri:dev": "bun tauri dev",
    	"tauri:build": "bun tauri build",

    	"tauri:dev:windows": "bun tauri dev --target x86_64-pc-windows-gnu",
		"build:windows:bundle": "bun run build:web && bun run tauri:build:windows",
		"tauri:build:windows": "bun tauri build --target x86_64-pc-windows-gnu",

		"tauri:dev:linux": "bun tauri dev --target x86_64-unknown-linux-gnu",
		"tauri:build:linux": "bun tauri build --target x86_64-unknown-linux-gnu",
		"build:linux:bundle": "bun run build:web && bun run tauri:build:linux"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.5.17",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tauri-apps/cli": "^1.5.14",
		"@types/d3": "^7.4.3",
		"@types/semver": "^7.5.8",
		"@types/topojson-client": "^3.1.4",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"archiver": "^7.0.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.40.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.1",
		"tslib": "^2.6.3",
		"typescript": "^5.5.2",
		"vite": "^5.3.1"
	},
	"type": "module",
	"dependencies": {
		"@tauri-apps/api": "^1.5.6",
		"d3": "^7.9.0",
		"semver": "^7.6.2",
		"topojson-client": "^3.1.0"
	}
}